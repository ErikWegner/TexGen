<?php

function texgen_menu() {
    $item = array();

    $items['texgen'] = array(
        'title' => 'LaTeX Generator',
        'page callback' => 'texgen_page',
        'access arguments' => array('access content'),
        'type' => MENU_NORMAL_ITEM,
    );

    $items['texgen/doc'] = array(
        'title' => t('#1'),
        'page callback' => 'drupal_get_form',
        'page arguments' => array('texgen_docgen'),
        'access callback' => TRUE,
        'description' => t('Generate complex LaTeX document'),
        'type' => MENU_DEFAULT_LOCAL_TASK,
    );

    return $items;
}

function texgen_docgen($form_state) {

  $form['description'] = array(
    '#type' => 'item',
    '#title' => t('A form with nothing but a textfield'),
  );
  // This is the first form element. It's a textfield with a label, "Name"
  $form['name'] = array(
    '#type' => 'textfield',
    '#title' => t('Name'),
  );
  return $form;
}

function texgen_page() {
    return '<p>' . l('LaTeX Document', 'texgen/doc') . ' </p>';
}